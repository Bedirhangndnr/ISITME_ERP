@using MyBlog.Mvc.Areas.Admin.Models.SingleModels;
@using MyBlog.Shared.Utilities.Results.ComplexTypes;
@model MyBlog.Entities.Dtos.BrandDtos.BrandListDto
@{
    Layout = "_Layout";
    ViewBag.Title = "Hasta Referansları";
}

<ol class="breadcrumb mb-r mt-2">
    <li class="breadcrumb-item"> <a asp-area="Admin" asp-controller="Home" asp-action="Index">Admin</a></li>
    <li class="breadcrumb-item active"><a asp-area="Admin" asp-controller="Brand" asp-action="Index">MArkalar</a></li>
</ol>
@if (Model.ResultStatus == ResultStatus.Success)
{
    <input type="hidden" id="tableType" data-tableType="@ViewBag.TableType" value="@ViewBag.TableType" />
    <div id="modalPlaceHolder" aria-hidden="true"></div>
    <div class="card mb-4 mt-2">
        <div class="card-header">
            <i class="fas fa-table mr-1"></i>
            Markalar
        </div>
        <div class="card-body">
            <div class="spinner-border" role="status" style="display: none;">
                <span class="sr-only">Yükleniyor...</span>
            </div>
            <div class="table-responsive">
                <table class="table table-bordered datatable" id="brandsTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Başlık</th>
                            <th class="dt-button-col">İşlemler</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>ID</th>
                            <th>Başlık</th>
                            <th class="dt-button-col">İşlemler</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var brand in Model.Brands)
                        {
                            <tr name="@brand.Id">
                                <td>@brand.Id</td>
                                <td>@brand.Title</td>
                                <td class="dt-button-col">
                                        @await Component.InvokeAsync("UpdatePageButtons", new UpdatePageButtonsModel
                                            {
                                            Id=brand.Id,
                                            TableType=ViewBag.tableType,
                                            })

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
@if (Model.ResultStatus == ResultStatus.Error)
{
    <div class="alert alert-danger mt-3">
        @Model.Message <br />
        Dashboard sayfasına geri dönmek için lütfen <a class="alert-link" asp-area="Admin" asp-controller="customerType" asp-action="Index">tıklayınız.</a>
    </div>
}

@section Scripts
    {
    <script src="~/AdminArea/js/brandIndex.js" type="application/ecmascript"></script>
}

