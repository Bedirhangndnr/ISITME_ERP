@using MyBlog.Mvc.Areas.Admin.Models.SingleModels;
@model MyBlog.Mvc.Areas.Admin.Models.AppointmentAddViewModel
@{
    Layout = "_Layout";
    ViewBag.Title = "Makale Ekle";
}
<ol class="breadcrumb mb-3 mt-2">
    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Admin</a></li>
    <li class="breadcrumb-item active"><a asp-area="Admin" asp-controller="Appointment" asp-action="Index">Randevular</a></li>
    <li class="breadcrumb-item active"><a asp-area="Admin" asp-controller="Appointment" asp-action="Add">Ekle</a></li>
</ol>
<form asp-controller="Appointment" asp-action="Add" method="post" enctype="multipart/form-data">
    <div class="row mt-2">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <input type="hidden" asp-for="Employees" value="@Model.Employees" />
                    <input type="hidden" asp-for="Customers" value="@Model.Customers" />
                    <input type="hidden" asp-for="AppointmentTypes" value="@Model.AppointmentTypes" />

                    <div class="form-group">
                        <input type="text" id="articleTitle" class="form-control" placeholder="Makale Başlığı" asp-for="Title" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <textarea id="text-editor" asp-for="Description"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Not" asp-for="Description" />
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    Tipler
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label for="employeesList">Personeller</label>
                        <select id="employeesList" class="form-control" asp-for="EmployeeId" asp-items="@(new SelectList(Model.Employees,"Id","FirstName"))">
                            <option></option>
                        </select>
                        <span asp-validation-for="EmployeeId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="customersList">Hastalar</label>
                        <select id="customersList" class="form-control" asp-for="CustomerID" asp-items="@(new SelectList(Model.Customers,"Id","FirstName"))">
                            <option></option>
                        </select>
                        <span asp-validation-for="CustomerID" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="appointmentTypeList">Randevu Tipleri</label>
                        <select id="appointmentTypeList" class="form-control" asp-for="AppointmentTypeId" asp-items="@(new SelectList(Model.AppointmentTypes,"Id","Title"))">
                            <option></option>
                        </select>
                        <span asp-validation-for="AppointmentTypeId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="datepicker" asp-for="Date"></label>
                        <input type="text" id="datetimepicker" class="form-control" value="@DateTime.Now.ToShortDateString()" asp-for="Date" />
                        <span asp-validation-for="Date" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        @await Component.InvokeAsync("UpdatePageButtons", new UpdatePageButtonsModel
                        {
                        Id=0,
                        InMainPage=1,
                        TableType=ViewBag.tableType,
                        Action="Update",
                        Controller="Appointment"
                        })
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
