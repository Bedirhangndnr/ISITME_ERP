@using MyBlog.Mvc.Areas.Admin.Models.SingleModels;
@model MyBlog.Mvc.Areas.Admin.Models.AppointmentUpdateViewModel

@{
    ViewData["Title"] = "Güncelle";
    Layout = "_Layout";
}
@await Component.InvokeAsync("BreadCrumbs", new BreadCrumbsViewModel
{
        Depth = 3,
        Controller = "Appointment",
        ControllerTr = "Randevular",
        Action = "Update",
        ActionTR = "Güncelle",
        TableType = ViewBag.TableType
})
<form asp-controller="Appointment" asp-action="Update" method="post" enctype="multipart/form-data">
    <div class="row mt-2">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <input type="hidden" asp-for="Id" value="@Model.Id" />
                    <input type="hidden" asp-for="CreatedByName" value="@Model.CreatedByName" />
                    <input type="hidden" asp-for="Employees" value="@Model.Employees" />
                    <input type="hidden" asp-for="AppointmentTypes" value="@Model.AppointmentTypes" />
                    <input type="hidden" asp-for="Customers" value="@Model.Customers" />

                  @*   <div class="form-group"> 
                        <input type="text" id="articleTitle" class="form-control" placeholder="Randevu Başlığı" asp-for="Title" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div> *@
                   <div class="form-group">
                        <textarea id="text-editor" asp-for="Description"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    @*
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Not" asp-for="Description" />
                    </div> *@
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    Tipler
                </div>
                <div class="card-body">
                    <div class="form-row">
                        <!-- İlk Div -->
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="employeesList">Personel</label>
                                <select id="employeesList" class="form-control" asp-for="EmployeeId" asp-items="@(new SelectList(Model.Employees,"Id","FirstName"))">
                                    <option></option>
                                </select>
                                <span asp-validation-for="EmployeeId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">

                            <div class="form-group">
                                <label for="customersList">Hastalar</label>
                                <select id="customersList" class="form-control" asp-for="CustomerID" asp-items="@(new SelectList(Model.Customers,"Id","FirstName"))">
                                    <option></option>
                                </select>
                                <span asp-validation-for="CustomerID" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div id="newCustomerName" class="form-group">
                                <label for="newCustomersName">Yeni Hasta Adı</label>
                                <input type="text" id="newCustomersName" asp-for="NewCustomerName" class="form-control" />
                                <span asp-validation-for="NewCustomerName" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <!-- İlk Div -->
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="appointmentTypeList">Randevu Tipi</label>
                                <select id="appointmentTypeList" class="form-control" asp-for="AppointmentTypeId" asp-items="@(new SelectList(Model.AppointmentTypes,"Id","Title"))">
                                    <option></option>
                                </select>
                                <span asp-validation-for="AppointmentTypeId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="datepicker" asp-for="Date"></label>
                                <input type="text" id="datetimepicker" class="form-control" value="@Model.Date" asp-for="Date" />
                                <span asp-validation-for="Date" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    @await Component.InvokeAsync("UpdatePageButtons", new UpdatePageButtonsModel
                    {
                    Id=Model.Id,
                    InMainPage=1,
                    InUpdate=1,
                    TableType=ViewBag.tableType,
                    Action="Update",
                    Controller="Appointment"
                    })
                </div>
                </div>

            </div>
        @await Component.InvokeAsync("ModifiedDetailsInfo", new ModifiedDetailsInfoModel
        {
        CreatedByName = Model.CreatedByName,
        CreatedDate = Model.CreatedDate,
        ModifiedByName = Model.ModifiedByName,
        ModifiedDate = Model.ModifiedDate
        })


    </div>
</form>
