@using MyBlog.Mvc.Areas.Admin.Models.SingleModels;
@using MyBlog.Mvc.Consts;
@model MyBlog.Entities.Dtos.MessageToDeveloperDtos.MessageToDeveloperUpdateDto
<!-- Modal -->

<div class="modal fade" role="dialog" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel"><span class="fas fa-plus"></span>Geliştiriciye Gönderilen Mesajı Güncelle</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="İptal">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="Update" id="form-messageToDeveloper-update">
                    <input type="hidden" asp-for="CreatedByName" />
                    <input type="hidden" asp-for="Progress" />
                    @* <input type="hidden" asp-for="EstimatedCompletionDate" /> *@
                    <input type="hidden" id="tableType" value="@ViewBag.tableType" />
                    <input type="hidden" asp-for="Id" />
                    <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
                     <div asp-validation-summary="All" class="text-danger" id="validation-summary" aria-hidden="true" style="display: none"></div>
                    <div class="form-group">
                        <input class="form-control" asp-for="Title" placeholder="Başlık" />
                        <span class="text-danger" asp-validation-for="Title"></span>
                    </div>
                    <div class="form-group">
                        <input class="form-control" asp-for="Message" placeholder="Mesaj" />
                        <span class="text-danger" asp-validation-for="Message"></span>
                    </div>

                    @*                     <div class="form-check">
                    <input type="checkbox" id="isActive" class="form-check-input" asp-for="IsRead" />
                    <label for="isActive" class="form-check-label" asp-for="IsRead"></label>
                    <span asp-validation-for="IsRead" class="text-danger"></span>
                    </div> *@
                 @*    @if (ViewBag.Roles != null && ViewBag.Roles.Contains(AuthorizeDefinitionConstants.Developer))
                    {
                        <div class="form-group">
                            <input type="text" id="Progress" class="form-control" asp-for="Progress" placeholder="Aşama" />
                            <span asp-validation-for="Progress" class="text-danger"></span>
                        </div>
                    } *@
                </form>
            </div>
            @await Component.InvokeAsync("ModifiedDetailsInfo", new ModifiedDetailsInfoModel
            {
            CreatedByName = Model.CreatedByName,
            CreatedDate = Model.CreatedDate,
            ModifiedByName = Model.ModifiedByName,
            ModifiedDate = Model.ModifiedDate
            })


            @await Component.InvokeAsync("PartialButtons", new PartialButtonsModel
            {
            Id=Model.Id,
            TableType=ViewBag.tableType,
            })
        </div>
    </div>
</div>
