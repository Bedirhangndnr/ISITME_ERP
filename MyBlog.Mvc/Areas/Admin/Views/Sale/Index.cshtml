@using MyBlog.Shared.Utilities.Results.ComplexTypes;
@model MyBlog.Entities.Dtos.SaleDtos.SaleListDto;
@{
    Layout = "_Layout";
    ViewBag.Title = "Satışlar";
}

<ol class="breadcrumb mb-r mt-2">
    <li class="breadcrumb-item"> <a asp-area="Admin" asp-controller="Home" asp-action="Index">Admin</a></li>
    <li class="breadcrumb-item active"><a asp-area="Admin" asp-controller="Sale" asp-action="Index">Çalışanlar</a></li>
</ol>
@if (Model.ResultStatus == ResultStatus.Success)
{
    <div id="modalPlaceHolder" aria-hidden="true"></div> @*id verme sebebimiz, divi seçip divin içine partial view verecek olmamısz*@
    <div class="card mb-4 mt-2">
        <div class="card-header">
            <i class="fas fa-table mr-1"></i>
            Satışlar
        </div>
        <div class="card-body">
            <div class="spinner-border" role="status" style="display: none;">
                <span class="sr-only">Yükleniyor...</span>
            </div>
            <div class="table-responsive">
                <table class="table table-bordered" id="salesTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Personel</th>
                            <th>Hasta</th>
                            <th>Satış Tipi</th>
                            <th>Satış Durumu</th>
                            <th>Ürün</th>
                            <th>Satış Tutarı</th>
                            @*<th>Açıklama</th>*@
                            <th>İşlem</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>ID</th>
                            <th>Personel</th>
                            <th>Hasta</th>
                            <th>Satış Tipi</th>
                            <th>Satış Durumu</th>
                            <th>Ürün</th>
                            <th>Satış Tutarı</th>
                            @*<th>Açıklama</th>*@
                            <th>İşlem</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var sale in Model.SaleListWithRelatedTables)
                        {
                            <tr name="@sale.Id">
                                <td>@sale.Id</td>
                                <td>@sale.EmployeeFirstName </td>
                                <td>@sale.CustomerFirstName</td>
                                <td>@sale.SaleTypeName</td>
                                <td>@sale.SaleStatusName</td>
                                <td>@sale.ProductName</td>
                                <td>@sale.Amount</td>
                                @*<td>@(sale.Note == null ? "Not Eklenmemiş" : (sale.Note.Length > 75 ? sale.Note.Substring(0, 75) : sale.Note))</td>*@
                                <td>
                                    <a title="Tricks Site" class="btn btn-primary btn-sm btn-update" data-id="@sale.Id" asp-area="Admin" asp-controller="Sale" asp-action="Update" asp-route-saleId="@sale.Id"><span class="fas fa-edit"></span></a>
                                    <button class="btn btn-warning btn-sm btn-assign" data-id="@sale.Id"><span class="fas fa-user-shield"></span></button>
                                    <button class="btn btn-primary btn-sm btn-update" data-id="@sale.Id"><span class="fas fa-edit"></span></button>
                                    <button class="btn btn-danger btn-sm btn-delete" data-id="@sale.Id"><span class="fas fa-minus-circle"></span></button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
@if (Model.ResultStatus == ResultStatus.Error)
{
    <div class="alert alert-danger mt-3">
        @Model.Message <br />
        Dashboard sayfasına geri dönmek için lütfen <a class="alert-link" asp-area="Admin" asp-controller="Customer" asp-action="Index">tıklayınız.</a>
    </div>
}
@section Scripts
    {
    <script src="~/AdminArea/js/saleIndex.js" type="application/ecmascript"></script>
    <script>
        $(document).ready(function () {
            $('#btnAdd').click(function () {
                window.location.href = '@Url.Action("Add", "Sale")';
            });

        });
    </script>
}
