@{
    ViewData["Title"] = "Add";
    Layout = "_Layout";
}
@await Component.InvokeAsync("BreadCrumbs", new BreadCrumbsViewModel
{
        Depth = 3,
        Controller = "Sale",
        ControllerTr = "Satışlar",
        Action = "Update",
        ActionTR = "Güncelle",
