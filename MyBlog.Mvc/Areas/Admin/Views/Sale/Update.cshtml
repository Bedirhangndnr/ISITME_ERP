                        <label asp-for="DownPayment"></label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">TL</span>
                            </div>
                            <input id="DownPayment" class="form-control" asp-for="DownPayment" value=@Model.DownPayment />
