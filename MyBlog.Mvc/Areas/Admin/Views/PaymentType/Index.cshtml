@using MyBlog.Mvc.Areas.Admin.Models.SingleModels;
@using MyBlog.Shared.Utilities.Results.ComplexTypes;
@model MyBlog.Entities.Dtos.PaymentTypeDtos.PaymentTypeListDto
@{
    Layout = "_Layout";
    ViewBag.Title = "Personel Tipleri";
}
@await Component.InvokeAsync("BreadCrumbs", new BreadCrumbsViewModel
{
        Depth = 2,
        Controller = "PaymentType",
        Action = "Yok",
        ActionTR = "Yok",
        TableType = ViewBag.TableType
})
@if (Model.ResultStatus == ResultStatus.Success)
{
    <div id="modalPlaceHolder" aria-hidden="true"></div>
    <div class="card mb-4 mt-2">
        <div class="card-header">
            <i class="fas fa-table mr-1"></i>
            Ödeme Tipleri
        </div>
        <div class="card-body">
            <div class="spinner-border" role="status" style="display: none;">
                <span class="sr-only">Yükleniyor...</span>
            </div>
            <div class="table-responsive">
                <table class="table table-bordered datatable" id="paymentTypesTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Başlık</th>
                            <th class="dt-button-col">İşlemler</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>ID</th>
                            <th>Başlık</th>
                            <th class="dt-button-col">İşlemler</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var paymentType in Model.PaymentTypes)
                        {
                            <tr name="@paymentType.Id">
                                <td>@paymentType.Id</td>
                                <td>@paymentType.Title</td>
                                <td class="dt-button-col">
                                    <button title="Güncelle" class="btn btn-primary btn-sm btn-update" data-id="@paymentType.Id">
                                        <span class="fas fa-edit"></span>
                                    </button>
                                    <button title="Sil" class="btn btn-danger btn-sm btn-delete" data-id="@paymentType.Id">
                                        <span class="fas fa-minus-circle"></span>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
@if (Model.ResultStatus == ResultStatus.Error)
{
    <div class="alert alert-danger mt-3">
        @Model.Message <br />
        Dashboard sayfasına geri dönmek için lütfen <a class="alert-link" asp-area="Admin" asp-controller="employeeType" asp-action="Index">tıklayınız.</a>
    </div>
}

