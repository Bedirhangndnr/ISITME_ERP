@using MyBlog.Services.Utilities;
@model MyBlog.Mvc.Areas.Admin.Models.SingleModels.UpdatePageButtonsModel

<div class="form-group row justify-content-center">
    @if (Model.InMainPage==0)
    {
        @if (ViewBag.TableType == TableReturnTypesConstants.NonDeletedTables && Model.Action == "")
        {
            <button class="btn btn-primary btn-sm btn-update" data-id="@Model.Id" data-tableType="@ViewBag.tableType"><span class="fas fa-edit"></span></button>
        }
        @if (Model.Action != "")
        {
            <a title="Tricks Site" class="btn btn-primary btn-sm btn-update" data-id="@Model.Id" asp-area="Admin"asp-controller=@Model.Controller asp-action=@Model.Action asp-route-Id="@Model.Id" asp-route-tableType="@ViewBag.tableType"><span class="fas fa-edit"></span></a>
        }
        <button title="Sil" class="btn btn-danger btn-sm btn-delete" data-id="@Model.Id" data-tableType="@ViewBag.tableType"><span class="fas fa-minus-circle"></span></button>
        @if (ViewBag.TableType == TableReturnTypesConstants.DeletedTables)
        {
            <a class="btn btn-warning btn-sm btn-undo" data-id="@Model.Id" data-inUpdate="0" data-tableType="@ViewBag.tableType"><span class="fas fa-undo"></span></a>
        }

    }
    else if (Model.InMainPage == 1)
    {
        if (Model.InUpdate==0)
        {
            <button type="submit" class="btn btn-primary btn-block mt-4" asp-route-tableType="@Model.TableType" onclick="updateValuesAmount();">Kaydet</button>
        }
        else if (Model.InUpdate == 1 && ViewBag.TableType == TableReturnTypesConstants.NonDeletedTables)
        {
            <button type="submit" class="btn btn-primary btn-block mt-4" asp-route-tableType="@Model.TableType">Güncelle</button>
            <button title="Sil" class="btn btn-danger btn-sm btn-delete" data-inUpdate="1" data-id="@Model.Id" data-tableType="@ViewBag.tableType"><span class="fas fa-minus-circle"></span></button>
        }
        else if (Model.InUpdate == 1 && ViewBag.TableType == TableReturnTypesConstants.DeletedTables)
        {

            <button title="Sil" class="btn btn-danger btn-sm btn-delete" data-inUpdate="1" data-id="@Model.Id" data-tableType="@ViewBag.tableType"><span class="fas fa-minus-circle"></span></button>
            <a class="btn btn-warning btn-sm btn-undo" data-id="@Model.Id" data-inUpdate="1" data-tableType="@ViewBag.tableType"><span class="fas fa-undo"></span></a>
        }
    }


</div>