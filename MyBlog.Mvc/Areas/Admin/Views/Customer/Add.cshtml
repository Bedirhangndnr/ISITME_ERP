@model MyBlog.Mvc.Areas.Admin.Models.CustomerModels.CustomerAddViewModel

@{
    ViewData["Title"] = "Add";
    Layout = "_Layout";
}

<ol class="breadcrumb mb-3 mt-2">
    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Admin</a></li>
    <li class="breadcrumb-item active"><a asp-area="Admin" asp-controller="Article" asp-action="Index">Makaleler</a></li>
    <li class="breadcrumb-item active"><a asp-area="Admin" asp-controller="Article" asp-action="Add">Ekle</a></li>
</ol>
<form asp-controller="Customer" asp-action="Add" method="post" enctype="multipart/form-data">
    <div class="row mt-2">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    Kişisel Bilgiler
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="PictureFile"></label>
                        <input type="file" accept="image/*" class="form-control-file" asp-for="PictureFile" />
                        <span class="text-danger" asp-validation-for="PictureFile"></span>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <input type="text" id="customerName" class="form-control" placeholder="Ad" asp-for="FirstName" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <input type="text" id="customerSurname" class="form-control" placeholder="Soyad" asp-for="LastName" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <input type="text" id="customerPhone" class="form-control" placeholder="Telefon Numarası" asp-for="Phone" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>

                        <div class="form-group col-md-6">
                            <input type="text" id="customerMail" class="form-control" placeholder="E-Posta" asp-for="Email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <input type="text" id="customerTc" class="form-control" placeholder="TC Kimlik Numarası" asp-for="TC" />
                            <span asp-validation-for="TC" class="text-danger"></span>
                        </div>

                        <div class="form-group col-md-6">
                            <input type="text" id="customerHospital" class="form-control" placeholder="Raporun Veren Hastane" asp-for="HospitalOfReport" />
                            <span asp-validation-for="HospitalOfReport" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" style="min-height:100px" placeholder="Adres Giriniz" asp-for="Address"></textarea>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Not" asp-for="Note" />
                    </div>
                    <div class="form-group">
                        <textarea id="text-editor" asp-for="About" placeholder="Hakkında.."></textarea>
                        <span asp-validation-for="About" class="text-danger"></span>
                    </div>



                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    Tipler
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <select id="customerReferanceList" class="form-control" asp-for="CustomerReferanceId" asp-items="@(new SelectList(Model.CustomerReferances,"Id","FirstName"))">
                            <option></option>
                        </select>
                        <span asp-validation-for="CustomerReferanceId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <select id="employeeList" class="form-control" asp-for="EmployeeId" asp-items="@(new SelectList(Model.Employees,"Id","FirstName"))">
                            <option></option>
                        </select>
                        <span asp-validation-for="EmployeeId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <select id="customerTypeList" class="form-control" asp-for="CustomerTypeId" asp-items="@(new SelectList(Model.CustomerTypes,"Id","Title"))">
                            <option></option>
                        </select>
                        <span asp-validation-for="CustomerTypeId" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block mt-4">Kaydet</button>
            </div>
        </div>
    </div>
</form>
