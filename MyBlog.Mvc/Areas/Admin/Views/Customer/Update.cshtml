@using MyBlog.Mvc.Areas.Admin.Models.SingleModels;
@model MyBlog.Mvc.Areas.Admin.Models.CustomerModels.CustomerUpdateViewModel
@{
    Layout = "_Layout";
    ViewBag.Title = "Makale Ekle";
}
<meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate" />
<meta http-equiv="Pragma" content="no-cache" />
<meta http-equiv="Expires" content="0" />
@await Component.InvokeAsync("BreadCrumbs", new BreadCrumbsViewModel
{
        Depth = 3,
        Controller = "Customer",
        ControllerTr = "Hastalar",
        Action = "Update",
        ActionTR = "Güncelle",
        TableType = ViewBag.TableType
})
<form asp-controller="Customer" asp-action="Update" method="post" enctype="multipart/form-data">
    <div class="row mt-2">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <input type="hidden" asp-for="Id" value="@Model.Id" />
                    <input type="hidden" asp-for="CreatedByName" value="@Model.CreatedByName" />
                    <input type="hidden" asp-for="Employees" value="@Model.Employees" />
                    <input type="hidden" asp-for="CustomerTypes" value="@Model.CustomerTypes." />
                    <input type="hidden" asp-for="CustomerReferances" value="@Model.CustomerReferances" />
                    <input type="hidden" id="tableType" value="@ViewBag.tableType" />
                    <div class="form-group">
                        <label asp-for="PictureFile"></label>
                        <input type="hidden" id="picture" class="form-control-file" asp-for="Picture" />
                        <img class="my-image" src="~/img/@Model.Picture" alt="@Model.FirstName" />
                        <input type="file" accept="image/*" class="form-control-file" asp-for="PictureFile" />
                        <span class="text-danger" asp-validation-for="PictureFile"></span>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Ad</span>
                            </div><input type="text" id="customerFirstName" class="form-control" asp-for="FirstName" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Soyd</span>
                            </div><input type="text" id="customerLastName" class="form-control" asp-for="LastName" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">TC</span>
                            </div><input type="text" id="customerTC" class="form-control" asp-for="TC" />
                            <span asp-validation-for="TC" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">E-Mail</span>
                            </div><input type="text" id="customerEmail" class="form-control" Mail" asp-for="Email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Telefon Numarası</span>
                            </div><input type="text" id="customerPhone" class="form-control" asp-for="Phone" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Hastane</span>
                            </div><input type="text" id="customerHospitalOfReport" class="form-control" asp-for="HospitalOfReport" />
                            <span asp-validation-for="HospitalOfReport" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Adres</span>
                                <textarea id="text-editor" asp-for="Address"></textarea>
                            </div>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="About"></label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Hakkında</span>
                            </div><input type="text" id="customerAbout" class="form-control" asp-for="About" />
                            <span asp-validation-for="About" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Note"></label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Not</span>
                            </div><input type="text" id="customerNote" class="form-control" asp-for="Note" />
                            <span asp-validation-for="Note" class="text-danger"></span>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    Tipler
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Personel</span>
                            </div><select id="employeesList" class="form-control" asp-for="EmployeeId" asp-items="@(new SelectList(Model.Employees,"Id","FirstName"))">
                                <option></option>
                            </select>
                            <span asp-validation-for="EmployeeId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Hasta Referansı</span>
                            </div><select id="customersList" class="form-control" asp-for="CustomerReferanceId" asp-items="@(new SelectList(Model.CustomerReferances,"Id","FirstName"))">
                                <option></option>
                            </select>
                            <span asp-validation-for="CustomerReferanceId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Hasta Tipi</span>
                            </div><select id="appointmentTypeList" class="form-control" asp-for="CustomerTypeId" asp-items="@(new SelectList(Model.CustomerTypes,"Id","Title"))">
                                <option></option>
                            </select>
                            <span asp-validation-for="CustomerTypeId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            @await Component.InvokeAsync("UpdatePageButtons", new UpdatePageButtonsModel
                            {
                            Id=Model.Id,
                            InMainPage=1,
                            InUpdate=1,
                            TableType=ViewBag.tableType,
                            Action="Update",
                            Controller="Customer"
                            })
                        </div>
                    </div>
                </div>
            </div>
            @await Component.InvokeAsync("ModifiedDetailsInfo", new ModifiedDetailsInfoModel
            {
            CreatedByName = Model.CreatedByName,
            CreatedDate = Model.CreatedDate,
            ModifiedByName = Model.ModifiedByName,
            ModifiedDate = Model.ModifiedDate
            })
        </div>
    </div>
</form>
