@using MyBlog.Mvc.Areas.Admin.Models.SingleModels;
@model MyBlog.Mvc.Areas.Admin.Models.CustomerModels.CustomerUpdateViewModel
@{
    Layout = "_Layout";
    ViewBag.Title = "Makale Ekle";
}
<ol class="breadcrumb mb-3 mt-2">
    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Admin</a></li>
    <li class="breadcrumb-item active"><a asp-area="Admin" asp-controller="Appointment" asp-action="Index">Randevular</a></li>
    <li class="breadcrumb-item active"><a asp-area="Admin" asp-controller="Appointment" asp-action="Update">Ekle</a></li>
</ol>
<form asp-controller="Customer" asp-action="Update" method="post" enctype="multipart/form-data">
    <div class="row mt-2">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <input type="hidden" asp-for="Id" value="@Model.Id" />
                    <input type="hidden" asp-for="CreatedByName" value="@Model.CreatedByName" />
                    <input type="hidden" asp-for="Employees" value="@Model.Employees" />
                    <input type="hidden" asp-for="CustomerTypes" value="@Model.CustomerTypes." />
                    <input type="hidden" asp-for="CustomerReferances" value="@Model.CustomerReferances" />
                    <input type="hidden" id="tableType" value="@ViewBag.tableType" />
                    <div class="form-group">
                        <label asp-for="PictureFile"></label>
                        <input type="hidden" id="picture" class="form-control-file" asp-for="Picture" />

                        <input type="file" accept="image/*" class="form-control-file" asp-for="PictureFile" />
                        <span class="text-danger" asp-validation-for="PictureFile"></span>
                    </div>
                    <div class="form-group">
                        <input type="text" id="customerFirstName" class="form-control" placeholder="Ad" asp-for="FirstName" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="text" id="customerLastName" class="form-control" placeholder="Soy Ad" asp-for="LastName" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="text" id="customerTC" class="form-control" placeholder="TC" asp-for="TC" />
                        <span asp-validation-for="TC" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="text" id="customerEmail" class="form-control" placeholder="E-Mail" asp-for="Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="text" id="customerPhone" class="form-control" placeholder="Telefon Numarası" asp-for="Phone" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="text" id="customerHospitalOfReport" class="form-control" placeholder="Raporun Aldındığı Hastane" asp-for="HospitalOfReport" />
                        <span asp-validation-for="HospitalOfReport" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <textarea id="text-editor" asp-for="Address"></textarea>
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="About"></label>
                        <input type="text" id="customerAbout" class="form-control" placeholder="Hakkında" asp-for="About" />
                        <span asp-validation-for="About" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Note"></label>
                        <input type="text" id="customerNote" class="form-control" placeholder="Not" asp-for="Note" />
                        <span asp-validation-for="Note" class="text-danger"></span>
                    </div>

                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    Tipler
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label for="employeesList" asp-for="Employees">Çalışanlar</label>
                        <select id="employeesList" class="form-control" asp-for="EmployeeId" asp-items="@(new SelectList(Model.Employees,"Id","FirstName"))">
                            <option></option>
                        </select>
                        <span asp-validation-for="EmployeeId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="customersList" asp-for="CustomerReferances">Hasta Referanslari</label>
                        <select id="customersList" class="form-control" asp-for="CustomerReferanceId" asp-items="@(new SelectList(Model.CustomerReferances,"Id","FirstName"))">
                            <option></option>
                        </select>
                        <span asp-validation-for="CustomerReferanceId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="appointmentTypeList" asp-for="CustomerTypes">Hasta Tipi</label>
                        <select id="appointmentTypeList" class="form-control" asp-for="CustomerTypeId" asp-items="@(new SelectList(Model.CustomerTypes,"Id","Title"))">
                            <option></option>
                        </select>
                        <span asp-validation-for="CustomerTypeId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        @await Component.InvokeAsync("UpdatePageButtons", new UpdatePageButtonsModel
                        {
                        Id=Model.Id,
                        InMainPage=1,
                        InUpdate=1,
                        TableType=ViewBag.tableType,
                        Action="Update",
                        Controller="Customer"
                        })
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
