@using MyBlog.Mvc.Areas.Admin.Models.SingleModels;
@using MyBlog.Shared.Utilities.Results.ComplexTypes;
@model MyBlog.Entities.Dtos.OutPaymentDtos.OutPaymentListDto;
@{
    Layout = "_Layout";
    ViewBag.Title = "Satışlar";
}

<ol class="breadcrumb mb-r mt-2">
    <li class="breadcrumb-item"> <a asp-area="Admin" asp-controller="Home" asp-action="Index">Admin</a></li>
    <li class="breadcrumb-item active"><a asp-area="Admin" asp-controller="Payment" asp-action="Index">Personellar</a></li>
</ol>
@if (Model.ResultStatus == ResultStatus.Success)
{

    <input type="hidden" id="tableType" value="@ViewBag.TableType" />
    <div id="modalPlaceHolder" aria-hidden="true"></div> @*id verme sebebimiz, divi seçip divin içine partial view verecek olmamısz*@
    <div class="card mb-4 mt-2">
        <div class="card-header">
            <i class="fas fa-table mr-1"></i>
            Satışlar
        </div>
        <div class="card-body">
            <div class="spinner-border" role="status" style="display: none;">
                <span class="sr-only">Yükleniyor...</span>
            </div>
            <div class="table-responsive">
                <table class="table table-bordered" id="outPaymentsTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Toplam Borç</th>
                            <th>Ödenen</th>
                            <th>Kalan</th>
                            <th>Ödenme Durumu</th>
                            <th>Borçlu Olunan Kurum</th>
                            <th>Açıklama</th>
                            <th>İşlem</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>ID</th>
                            <th>Toplam Borç</th>
                            <th>Ödenen</th>
                            <th>Kalan</th>
                            <th>Ödenme Durumu</th>
                            <th>Borçlu Olunan Kurum</th>
                            <th>Açıklama</th>
                            <th>İşlem</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var payment in Model.OutPayments)
                        {
                            <tr name="@payment.Id">
                                <td>@payment.Id</td>
                                <td>@payment.DebtAmount | TL</td>
                                <td>@payment.AmountPaid | TL</td>
                                <td>
                                    @{

                                        var remainingAmount = payment.DebtAmount - payment.AmountPaid;
                                        var formattedRemainingAmount = remainingAmount;
                                    }
                                    @formattedRemainingAmount  - TL
                                </td>
                                <td>@(payment.IsPaid ? "Ödendi" : "Ödenmedi")</td>
                                <td>@payment.PaidPlace</td>
                                <td>@(payment.Description == null ? "Açıklama Eklenmemiş" : (payment.Description.Length > 75 ? payment.Description.Substring(0, 75) : payment.Description))</td>
                                <td>
                                    @await Component.InvokeAsync("UpdatePageButtons", new UpdatePageButtonsModel
                            {
                            Id=payment.Id,
                            InMainPage=0,
                            TableType=ViewBag.tableType,
                            Action="Update",
                            Controller="OutPayment"
                            })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
@if (Model.ResultStatus == ResultStatus.Error)
{
    <div class="alert alert-danger mt-3">
        @Model.Message <br />
        Dashboard sayfasına geri dönmek için lütfen <a class="alert-link" asp-area="Admin" asp-controller="Customer" asp-action="Index">tıklayınız.</a>
    </div>
}
<link href="~/AdminArea/css/dtPaginationCss.css" rel="stylesheet" />

@section Scripts
    {
    <script src="~/AdminArea/js/outPaymentScripts/outPaymentIndex.js" type="application/ecmascript"></script>
    <script>
        $(document).ready(function () {
            $('#btnAdd').click(function () {
                // ViewBag.TableType değişkeninin değerini burada alıyoruz
                var tableType = '@ViewBag.TableType';
                // Add action'ına tableType parametresini yollamak için, Url.Action fonksiyonunun
                // ikinci parametresine ekleyebilirsiniz
                window.location.href = '@Url.Action("Add", "OutPayment")' + '?tableType=' + encodeURIComponent(tableType);
            });
        });
    </script>
}
