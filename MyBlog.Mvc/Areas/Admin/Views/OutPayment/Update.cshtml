                icon: 'warning',
                confirmButtonColor: '#3085d6',
                confirmButtonText: 'Tamam',
                showCancelButton: true,
                cancelButtonText: 'Tümünü Öde',
                cancelButtonColor: '#d33',
            }).then((result) => {
                if (result.dismiss === Swal.DismissReason.cancel) {
                    payFullAmount();
                }
            });
            // paymentAmount'in en sağındaki rakamı silmek için aşağıdaki kodu ekleyin
            paymentAmountInput.value = paymentAmountInput.value.slice(0, -1);
        }
        else if(buttoneName=="Default") {
            calculateRemainingAmount();
        }
    }


    window.onload = function () {
        updateCurrentDebt(); // Güncel borç değerini getir
        calculateRemainingAmount(); // Kalan tutarı hesapla
    }

    function updateCurrentDebt() {
        // AJAX veya diğer yöntemlerle güncel borç değerini al
    }
    var keep_payAmount=0;
    function calculateRemainingAmount() {
        var totalAmount = parseFloat(document.getElementById("totalAmount").value.replace(",", ""));
        var currentDebt = parseFloat(document.getElementById("currentDebt").value.replace(",", ""));
        var paymentAmountInput = document.getElementById("paymentAmount");
        var paymentAmountCurr = document.getElementById("paymentAmountCurr");
        var paymentAmountInputCurr = 0
        var paymentAmount = 0;

        if (paymentAmountInput && paymentAmountInput.value) {
            paymentAmount = parseFloat(paymentAmountInput.value.replace(",", "")) - keep_payAmount;
            keep_payAmount = paymentAmount
        }
        if (paymentAmountCurr && paymentAmountCurr.value) {
            paymentAmountInputCurr = parseFloat(paymentAmountCurr.value.replace(",", ""))/100;
        }

        var remainingAmount = currentDebt + paymentAmountInputCurr - totalAmount - paymentAmount;
        document.getElementById("remainingAmount").value = remainingAmount;
        document.getElementById("totalAmount").value=currentDebt - remainingAmount;

    }
    function calculateRemainingAmountFromDetail() {
        var totalAmount = parseFloat(document.getElementById("totalAmount").value.replace(",", ""));
        var currentDebt = parseFloat(document.getElementById("currentDebt").value.replace(",", ""));
        var paymentAmountInput = document.getElementById("paymentAmountDetail");
        var paymentAmountCurr = document.getElementById("paymentAmountCurr");
        var paymentAmountInputCurr = 0
        var paymentAmount = 0;

        if (paymentAmountInput && paymentAmountInput.value) {
            paymentAmount = parseFloat(paymentAmountInput.value.replace(",", "")) - keep_payAmount;
            keep_payAmount = paymentAmount
        }
        if (paymentAmountCurr && paymentAmountCurr.value) {
            paymentAmountInputCurr = parseFloat(paymentAmountCurr.value.replace(",", ""))/100;
        }
    }
    function checkPaymentAmountFromDetail() {
        var paymentAmountInput = document.getElementById("paymentAmountDetail");
        var paymentAmount = parseFloat(paymentAmountInput.value.replace(/,/g, ''));

        var currentDebt = parseFloat(document.getElementById("currentDebt").value.replace(/,/g, ''));

        if (paymentAmount > currentDebt) {
            Swal.fire({
                title: 'Toplam borcu aşan bir ödeme yapamazsınız.',
                text: 'Lütfen ödenecek tutarı düzeltin.',
                icon: 'warning',
                confirmButtonColor: '#FF3200',
                confirmButtonText: 'İşleme Devam Et',
                showCancelButton: true,
                cancelButtonText: 'Tümünü Öde',
                cancelButtonColor: '#2CB8FA',
            }).then((result) => {
                if (result.dismiss === Swal.DismissReason.cancel) {
                    payFullAmountFromDetail();
                }
            });
            // paymentAmount'in en sağındaki rakamı silmek için aşağıdaki kodu ekleyin
            paymentAmountInput.value = paymentAmountInput.value.slice(0, -1);
        }
        else {
            calculateRemainingAmountFromDetail();
        }
    }

    function formatNumber(number) {
        var formattedNumber = number.toFixed(2).replace(/\d(?=(\d{3})+\.)/g, '$&,');
        return formattedNumber;
    }


    function payFullAmount() {
        var currentDebt = parseFloat(document.getElementById("currentDebt").value.replace(",", ""));
        var totalAmount = parseFloat(document.getElementById("totalAmount").value.replace(",", ""));

        document.getElementById("paymentAmount").value = currentDebt-totalAmount ;

        calculateRemainingAmount();
    }
    function payFullAmountFromDetail() {
        var currentDebt = parseFloat(document.getElementById("currentDebt").value.replace(",", ""));
        var totalAmount = parseFloat(document.getElementById("totalAmount").value.replace(",", ""));

        document.getElementById("paymentAmountDetail").value = currentDebt-totalAmount ;

        //calculateRemainingAmount();
    }

