@model MyBlog.Entities.Dtos.ExpenseDtos.ExpenseAddDto
<!-- Modal -->

<div class="modal fade" role="dialog" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel"><span class="fas fa-plus"></span>Marka Ekleme</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="İptal">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="Add" id="form-expense-add">

                    <input type="hidden" asp-for="CreatedByName" />
                    <input type="hidden" id="tableType" value="@ViewBag.tableType" />
                    <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
                    <div asp-validation-summary="All" class="text-danger" id="validation-summary" aria-hidden="true" style="display: none"></div>
                        <div class="col-md-12">

                            <input type="number" id="amount" class="form-control" placeholder="Miktar" asp-for="Amount" />
                            <span asp-validation-for="Amount" class="text-danger"></span>
                        </div>
                    <div class="form-group">
                        <input class="form-control" asp-for="Note" placeholder="Not" />
                        <span class="text-danger" asp-validation-for="Note"></span>
                    </div>
                    <div class="form-check">
                        <input type="checkbox" id="isDaily" class="form-check-input" asp-for="IsDaily" />
                        <label for="isDaily" class="form-check-label" asp-for="IsDaily"></label>
                        <span asp-validation-for="IsDaily" class="text-danger"></span>
                    </div>
                    <div class="form-check">
                        <input type="checkbox" id="isIncome" class="form-check-input" asp-for="IsIncome" />
                        <label for="isIncome" class="form-check-label" asp-for="IsIncome"></label>
                        <span asp-validation-for="IsIncome" class="text-danger"></span>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger btn-block" data-dismiss="modal"> <span class="fas fa-times"></span>İptal</button>
                <button type="button" class="btn btn-primary btn-block" id="btnSave"><span class="fas fa-save"></span>Kaydet</button>
            </div>
        </div>
    </div>
</div>
