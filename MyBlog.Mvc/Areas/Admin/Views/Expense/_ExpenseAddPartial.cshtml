@model MyBlog.Entities.Dtos.ExpenseDtos.ExpenseAddDto
<!-- Modal -->

<div class="modal fade" role="dialog" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel"><span class="fas fa-plus"></span>Marka Ekleme</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="İptal">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="Add" id="form-expense-add">

                    <input type="hidden" asp-for="CreatedByName" />
                    <input type="hidden" id="tableType" value="@ViewBag.tableType" />
                    <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
                    <div asp-validation-summary="All" class="text-danger" id="validation-summary" aria-hidden="true" style="display: none"></div>
                    <div class="row">
                        <div class="col-md-12 form-group">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">TL</span>
                                </div><input type="number" id="amount" class="form-control" placeholder="Miktar" asp-for="Amount" />
                            <span asp-validation-for="Amount" class="text-danger"></span>
                        </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 form-group">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">Not</span>
                                    </div><input class="form-control" id="note" asp-for="Note" placeholder="Not" />
                            <span class="text-danger" asp-validation-for="Note"></span>
                        </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="isDaily" asp-for="IsDaily">
                                <label class="form-check-label" for="isDaily">Günlük</label>
                                <span asp-validation-for="IsDaily" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="isIncome" asp-for="IsIncome">
                                <label class="form-check-label" for="isIncome">Gelir</label>
                                <span asp-validation-for="IsIncome" class="text-danger"></span>
                            </div>
                        </div>
                    </div>


                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger btn-block" data-dismiss="modal"> <span class="fas fa-times"></span>İptal</button>
                <button type="button" class="btn btn-primary btn-block" id="btnSave"><span class="fas fa-save"></span>Kaydet</button>
            </div>
        </div>
    </div>
</div>
