@using MyBlog.Mvc.Areas.Admin.Models.SingleModels;
@using MyBlog.Mvc.Consts;
@model MyBlog.Mvc.Areas.Admin.Models.ProductUpdateViewModel

@{
    ViewData["Title"] = "Add";
    Layout = "_Layout";
}
@await Component.InvokeAsync("BreadCrumbs", new BreadCrumbsViewModel
{
        Depth = 3,
        Controller = "Product",
        ControllerTr = "Ürünler",
        Action = "Update",
        ActionTR = "Güncelle",
        TableType = ViewBag.TableType
})

<meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate" />
<meta http-equiv="Pragma" content="no-cache" />
<meta http-equiv="Expires" content="0" />
<form asp-controller="Product" asp-action="Update" method="post" enctype="multipart/form-data">
    <div class="row mt-2">
        <div class="col-md-7">
            <div class="card">
                <div class="card-header">
                    Temel Bilgiler
                </div>
                <div class="card-body">
                    <input type="hidden" asp-for="CreatedByName" value="@Model.CreatedByName" />
                    <input type="hidden" asp-for="ProductSubGroups" value="@Model.ProductSubGroups" />
                    <input type="hidden" asp-for="Models" value="@Model.Models" />
                    <input type="hidden" asp-for="IsActive" value="@Model.IsActive" />
                    <input type="hidden" asp-for="Id" value="@Model.Id" />
                    <div class="form-group col-md-12">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Adet</span>
                            </div>
                            <input type="number" id="Quantity" class="form-control" asp-for="Quantity" />
                            <span asp-validation-for="Quantity" class="text-danger"></span>
                        </div>
                    </div>
                    @if (Model.UserWithRolesModel.Roles.Any(r => r.Equals(AuthorizeDefinitionConstants.SuperAdmin)))
                    {
                        <div class="form-group col-md-12">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">Fiyat | TL</span>
                                </div>
                                <input type="number" id="price" class="form-control" asp-for="Price" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                        </div>
                    }
                    <div class="form-group col-md-12">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Ürün Adı</span>
                            </div>                        <input type="text" id="productName" class="form-control" asp-for="ProductName" />
                            <span asp-validation-for="ProductName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group col-md-12">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Seri Numarası</span>
                            </div>                        <input type="text" id="serialNumber" class="form-control" asp-for="SerialNumber" />
                            <span asp-validation-for="SerialNumber" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group col-md-12">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Not</span>
                            </div>                        <input type="text" id="note" class="form-control" asp-for="Note" />
                            <span asp-validation-for="Note" class="text-danger"></span>
                        </div>
                    </div>

                </div>
            </div>
            @await Component.InvokeAsync("ModifiedDetailsInfo", new ModifiedDetailsInfoModel
            {
            CreatedByName = Model.CreatedByName,
            CreatedDate = Model.CreatedDate,
            ModifiedByName = Model.ModifiedByName,
            ModifiedDate = Model.ModifiedDate
            })
        </div>
        <div class="col-md-5">
            <div class="card">
                <div class="card-header">
                    Tipler
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label for="productSubGroupsList">Ürün Alt Grup</label>
                        <select id="productSubGroupsList1" class="form-control" asp-for="ProductSubGroupId" asp-items="@(new SelectList(Model.ProductSubGroups,"Id","Title"))">
                            <option></option>
                        </select>
                        <span asp-validation-for="ProductSubGroupId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="modelsList">Model</label>
                        <select id="modelsList1" class="form-control" asp-for="ModelId" asp-items="@(new SelectList(Model.Models,"Id","Title"))">
                            <option></option>
                        </select>
                        <span asp-validation-for="ModelId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        @await Component.InvokeAsync("UpdatePageButtons", new UpdatePageButtonsModel
                        {
                        Id=Model.Id,
                        InMainPage=1,
                        InUpdate=1,
                        TableType=ViewBag.tableType,
                        Action="Update",
                        Controller="Product"
                        })
                    </div>
                </div>
               
            </div>
          
        </div>

    </div>
</form>

