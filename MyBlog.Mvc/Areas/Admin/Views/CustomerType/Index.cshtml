@using MyBlog.Mvc.Areas.Admin.Models.SingleModels;
@using MyBlog.Shared.Utilities.Results.ComplexTypes;
@model MyBlog.Entities.Dtos.CustomerTypeDtos.CustomerTypeListDto
@{
    Layout = "_Layout";
    ViewBag.Title = "Hasta Referansları";
}

@await Component.InvokeAsync("BreadCrumbs", new BreadCrumbsViewModel
   {
       Depth = 2,
       Controller = "CustomerType",
       ControllerTr = "Hasta Tipleri",
       Action = "Yok",
       ActionTR = "Yok",
       TableType = ViewBag.TableType
   })
@if (Model.ResultStatus == ResultStatus.Success)
{
    <input type="hidden" id="tableType" data-tableType="@ViewBag.TableType" value="@ViewBag.TableType" />

    <div id="modalPlaceHolder" aria-hidden="true"></div>
    <div class="card mb-4 mt-2">
        <div class="card-header">
            <i class="fas fa-table mr-1"></i>
            Hastalar
        </div>
        <div class="card-body">
            <div class="spinner-border" role="status" style="display: none;">
                <span class="sr-only">Yükleniyor...</span>
            </div>
            <div class="table-responsive">
                <table class="table table-bordered" id="customerTypesTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Başlık</th>
                            <th>Not</th>
                            <th class="dt-button-col">İşlemler</th>

                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>ID</th>
                            <th>Başlık</th>
                            <th>Not</th>
                            <th class="dt-button-col">İşlemler</th>

                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var customerType in Model.CustomerTypes)
                        {
                            <tr name="@customerType.Id">
                                <td>@customerType.Id</td>
                                <td>@customerType.Title</td>
                                <td>@customerType.Note</td>
                                <td class="dt-button-col">
                                    @await Component.InvokeAsync("UpdatePageButtons", new UpdatePageButtonsModel
                            {
                            Id=customerType.Id,
                            TableType=ViewBag.tableType,
                            })


                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
@if (Model.ResultStatus == ResultStatus.Error)
{
    <div class="alert alert-danger mt-3">
        @Model.Message <br />
        Dashboard sayfasına geri dönmek için lütfen <a class="alert-link" asp-area="Admin" asp-controller="customerType" asp-action="Index">tıklayınız.</a>
    </div>
}

@section Scripts
