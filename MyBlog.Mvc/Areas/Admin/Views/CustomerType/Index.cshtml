    @using MyBlog.Shared.Utilities.Results.ComplexTypes;
@model MyBlog.Entities.Dtos.CustomerTypeDtos.CustomerTypeListDto
@{
    Layout = "_Layout";
    ViewBag.Title = "Hasta Referansları";
}

<ol class="breadcrumb mb-r mt-2">
    <li class="breadcrumb-item"> <a asp-area="Admin" asp-controller="Home" asp-action="Index">Admin</a></li>
    <li class="breadcrumb-item active"><a asp-area="Admin" asp-controller="CustomerTypes" asp-action="Index">Hasta Tipleri</a></li>
</ol>
@if (Model.ResultStatus == ResultStatus.Success)
{
    <div id="modalPlaceHolder" aria-hidden="true"></div>
    <div class="card mb-4 mt-2">
        <div class="card-header">
            <i class="fas fa-table mr-1"></i>
            Hastalar
        </div>
        <div class="card-body">
            <div class="spinner-border" role="status" style="display: none;">
                <span class="sr-only">Yükleniyor...</span>
            </div>
            <div class="table-responsive">
                <table class="table table-bordered" id="customerTypesTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Title</th>
                            <th>Not</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>ID</th>
                            <th>Title</th>
                            <th>Not</th>
                            <th>İşlemler</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var customerType in Model.CustomerTypes)
                        {
                            <tr name="@customerType.Id">
                                <td>@customerType.Id</td>
                                <td>@customerType.Title</td>
                                <td>@customerType.Note</td>
                                <td>
                                    <button title="Güncelle" class="btn btn-primary btn-sm btn-update" data-id="@customerType.Id">
                                        <span class="fas fa-edit"></span>
                                    </button>
                                    <button title="Sil" class="btn btn-danger btn-sm btn-delete" data-id="@customerType.Id">
                                        <span class="fas fa-minus-circle"></span>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
@if (Model.ResultStatus == ResultStatus.Error)
{
    <div class="alert alert-danger mt-3">
        @Model.Message <br />
        Dashboard sayfasına geri dönmek için lütfen <a class="alert-link" asp-area="Admin" asp-controller="customerType" asp-action="Index">tıklayınız.</a>
    </div>
}

